//Sorting vector using int
#include<iostream>
#include<algorithm>
using namespace std;
#include<vector>
int main()
{
    int n;
    vector <int> a;
    a.push_back(50);
    a.push_back(7);
    a.push_back(45);
    a.push_back(5);
    a.push_back(14);
    a.push_back(11);
    a.push_back(27);
    cout<<"Array:"<<endl;
	for (auto i = a.begin(); i != a.end(); ++i)
		cout << *i <<" ";
	sort(a.begin(), a.end());
    cout<<"\nSorted Array:"<<endl;
	for (auto i = a.begin(); i != a.end(); ++i)
		cout << *i <<" ";
	cout<<endl<<"Array in Reverse Sorted order:"<<endl;
	for (auto i = a.rbegin(); i != a.rend(); ++i)
		cout << *i <<" ";
    return 0;
}
